{
  "compilerOptions": {
    "baseUrl": "./src/",
    "sourceMap": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "noEmitOnError": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true
  },
  "include": [
    "./src/**/*",
    "./webpack/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
