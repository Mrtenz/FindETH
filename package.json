{
  "name": "findeth",
  "description": "A tool to help you find your lost Ethereum address, Ether or tokens, by searching through a bunch of derivation paths",
  "repository": "https://github.com/Mrtenz/findeth",
  "author": "Maarten Zuidhoorn <maarten@zuidhoorn.com>",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "rimraf ./dist ./coverage && lerna run clean",
    "start": "lerna run --stream start",
    "start:web": "yarn run start --scope @findeth/web",
    "start:desktop": "concurrently 'yarn run start:web' 'yarn run start --scope @findeth/desktop'",
    "serve": "cross-env NODE_ENV=production lerna run --scope @findeth/server --stream serve",
    "build": "cross-env NODE_ENV=production lerna run --stream build",
    "build:web": "yarn run build --scope @findeth/web",
    "build:desktop": "yarn run build --scope @findeth/desktop",
    "lint": "lerna run lint",
    "test": "jest",
    "prettier": "lerna run prettier"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,json,yml}": [
      "prettier --write --config ./.prettierrc --config-precedence file-override",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint && yarn run test && lint-staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-classes": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@ledgerhq/hw-transport-mocker": "^4.60.3",
    "@ledgerhq/hw-transport-node-hid-noevents": "^4.60.3",
    "@types/enzyme": "^3.9.3",
    "@types/finalhandler": "^1.1.0",
    "@types/hard-source-webpack-plugin": "^1.0.1",
    "@types/hdkey": "^0.7.0",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.8",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "^7.1.0",
    "@types/react-router-dom": "^4.3.3",
    "@types/serve-static": "^1.13.2",
    "@types/styled-components": "4.0.2",
    "@types/trezor-connect": "^6.0.3",
    "@types/w3c-web-usb": "^1.0.3",
    "@types/web-bluetooth": "^0.0.4",
    "@types/webpack": "^4.4.32",
    "@types/webpack-bundle-analyzer": "^2.13.1",
    "@types/webpack-merge": "^4.1.5",
    "babel-loader": "^8.0.6",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-plugin-styled-components": "^1.10.0",
    "babel-runtime": "^6.26.0",
    "codecov": "^3.5.0",
    "concurrently": "^4.1.0",
    "core-js": "^3.1.2",
    "cross-env": "^5.2.0",
    "csp-html-webpack-plugin": "^3.0.2",
    "css-loader": "^3.0.0",
